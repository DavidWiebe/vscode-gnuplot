{
	// symbols used for comments
	"comments": {
		"lineComment": "#"
	},

	// symbols used as brackets (auto-indentation)
	"brackets": [
		["{", "}"]
		// ["[", "]"],
		// ["(", ")"]
	],

	// symbols that are auto closed when typing
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		{ "open": "'",  "close": "'",  "notIn": ["string", "comment"] },
		{ "open": "`",  "close": "`",  "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
	],

	// symbols that can be used to surround a selection
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["`", "`"],
		["\"", "\""]
	]
}
