# EditorConfig is awesome: https://editorconfig.org

# top-most file
root = true

[*]
charset      = utf-8
end_of_line  = lf
indent_style = tab
tab_width    = 4
insert_final_newline     = true
trim_trailing_whitespace = true

[*.gp]
indent_style = spaces
indent_size  = 4

[*.md]
indent_style = spaces
indent_size  = 4
trim_trailing_whitespace = false

